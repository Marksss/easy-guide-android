<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/demo_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/easy_guide_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy Guide 0"
        app:layout_constraintBottom_toTopOf="@id/easy_guide_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/easy_guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy Guide 1"
        app:layout_constraintBottom_toTopOf="@id/easy_guide_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easy_guide_0"/>

    <Button
        android:id="@+id/easy_guide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy Guide 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easy_guide_1"/>

</android.support.constraint.ConstraintLayout>
